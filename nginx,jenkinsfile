pipeline {
    agent any
    environment {
        GIT_REPO = 'https://github.com/Sukhilnair/dockerize_nginx.git'
        DOCKERHUB_ID = 'sukhil-dockerhub-cred'
        DOCKERHUB_USERNAME = 'sukhilnair'
        DOCKERHUB_REPO = 'jenkins-class'
        BUILD_ID = "${env.BUILD_NUMBER}" // Setting the BUILD_ID to the Jenkins build number
    }

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Code Cloning') {
            steps {
                git branch: 'main', url: "${env.GIT_REPO}"
            }
        }
        stage('Build Docker') {
            steps {
                script {
                    docker.build("${env.DOCKERHUB_USERNAME}/${env.DOCKERHUB_REPO}:${env.BUILD_ID}")
                }
            }
        }
        stage('Pushing the Docker Image') {
            steps {
                script {
                    docker.withRegistry('', "${env.DOCKERHUB_ID}") {
                        docker.image("${env.DOCKERHUB_USERNAME}/${env.DOCKERHUB_REPO}:${env.BUILD_ID}").push()
                    }
                }
            }
        }
    }
}
